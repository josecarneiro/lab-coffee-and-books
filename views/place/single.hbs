<h2>Information about this place</h2>

<h4>Name: {{place.name}}</h4>
<p>Type: {{place.type}}</p>
<p>Latitude: {{place.location.coordinates.[1]}}</p>
<p>Longitude: {{place.location.coordinates.[0]}}</p>

<div class="buttons">
<form method="GET" action="/place/{{ place.id }}/edit">
  <button>Edit</button>
</form>
<form method="POST" action="/place/{{ place.id }}/delete">
  <button>Delete</button>
</form>
</div>
<br>

<div id="map"></div>

<script>
  const $map = document.getElementById('map');

  const position = {
    lat: {{ place.location.coordinates.[1] }},
    lng: {{ place.location.coordinates.[0] }}
  };
  
  function initMap() {
    const map = new window.google.maps.Map($map, {
      center: position,
      zoom : 9
    });
    const marker = new window.google.maps.Marker({
      position,
      map
    })
  }
</script>

{{> mapscript}}