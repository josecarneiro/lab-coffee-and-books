<h2>Update your place here</h2>
<form method="POST">
  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" placeholder="Name" value="{{place.name}}" required/>

  <label for="input-category">Type</label>
  <select name="category" id="input-category" required>
  <option value="" selected disabled>Category</option> <!-- Display empty placeholder value-->
  <option value="coffee_shop">Coffee Shop</option>
  <option value="book_store">Book Store</option>
  </select>

    <label for="input-latitude">Latitude</label>
  <input type="number" id="input-latitude" name="latitude" placeholder="Latitude" min="-90" max="90" />

  <label for="input-longitude">Longitude</label>
  <input type="number" id="input-longitude" name="longitude" placeholder="Longitude" min="180" max="180" />
  <br>
<button>Submit</button>
</form>