<h3>Edit your location</h3>
<form method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="name" value="{{place.name}}">
   
    <label for="type">Type</label>
    <select name="type" id="type">
      <option value="coffee shop">Coffee Shop</option>
      <option value="bookstore">Bookstore</option>
    </select>

    <label for="latitude">Latitude</label>
    <input type="number" name="latitude" id="latitude" placeholder="Latitude" step="0.01" value="{{place.location.coordinates.[1]}}">

     <label for="longitude">Longitude</label>
    <input type="number" name="longitude" id="longitude" placeholder="Longitude" step="0.01" value="{{place.location.coordinates.[0]}}">

    <button>Edit</button>
</form>